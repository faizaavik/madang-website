---
interface Props {
  currentLang?: string;
}

const { currentLang = 'id' } = Astro.props;
---

<!-- Header & Navigasi -->
<nav class="bg-white shadow-md sticky top-0 z-50">
  <div
    class="container mx-auto px-4 py-3 flex justify-between items-center"
  >
    <div class="flex items-center space-x-2">
      <a href="/" class="text-2xl font-bold text-orange-600"
        >MADANG<span class="text-gray-800">.COM</span></a
      >
    </div>

    <!-- Desktop Menu -->
    <div class="hidden md:flex items-center space-x-8">
      <a href="#beranda" class="hover:text-orange-600 font-medium"
        >Beranda</a
      >
      <a href="#tentang" class="hover:text-orange-600 font-medium"
        >Tentang</a
      >
      <a href="#referensi" class="hover:text-orange-600 font-medium"
        >Referensi</a
      >
      <a href="#kontak" class="hover:text-orange-600 font-medium">Kontak</a>
      <div class="flex items-center border-l pl-4 space-x-2">
        <button class="text-sm font-semibold hover:text-orange-600">
          ID
        </button>
        <span>|</span>
        <button class="text-sm font-semibold hover:text-orange-600">
          EN
        </button>
      </div>
    </div>

    <div class="flex items-center space-x-4">
      <a
        href="https://tiktok.com"
        target="_blank"
        class="text-gray-600 hover:text-black"
      >
        <i class="fab fa-tiktok text-xl"></i>
      </a>
      <button
        @click="$dispatch('open-login-modal')"
        class="bg-orange-600 text-white px-5 py-2 rounded-full font-semibold hover:bg-orange-700 transition"
      >
        Masuk
      </button>
    </div>
  </div>
</nav>
